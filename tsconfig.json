{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    // ... other configs, if any
    "baseUrl": "./",
    "paths": {
      "@lib/*": [
        "./lib/*"
      ],
      "@screens/*": [
        "./src/screens/*"
      ],
      "@assets/*": [
        "./assets/*"
      ]
    }
  },
  "include": [
    "./src/screens/*",
    "./lib/*",
    "./assets/*"
  ]
}
